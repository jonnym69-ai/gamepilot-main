{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@gamepilot/shared": ["packages/shared/dist/types"],
      "@gamepilot/shared/*": ["packages/shared/dist/types/*"]
    }
  },
  "references": [
    { "path": "./apps/api" },
    { "path": "./packages/shared" }
  ],
  "exclude": ["node_modules", "dist", "build"]
}